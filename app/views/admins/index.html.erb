<div class="col-sm-9">
<h1>Games FCA</h1>
<hr>
</div> 

<style>
.column {
    float: left;
    width: 33.33%;
    padding: 15px;
}
  
  th{
    text-align: justify;
    
  }

</style>

<div class="col-sm-11"> 
<div class="panel panel-default">
<div class="panel-heading">Lista de usuarios</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th></th>
      <th>Nombre</th>
      <th>Apellido paterno</th>
      <th>Apellido materno</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><img class="img-fluid" src="https://s-media-cache-ak0.pinimg.com/originals/7c/c7/a6/7cc7a630624d20f7797cb4c8e93c09c1.png" alt="", width="50", height="50"></td>
        <td><%= admin.nombre %></td>
        <td><%= admin.apellido_paterno %></td>
        <td><%= admin.apellido_materno %></td>
        <td><%= admin.direccion %></td>
        <td><%= admin.telefono %></td>
        <td><%= link_to 'Mostrar', admin, :class=>"btn btn-default" %></td>
        <td><%= link_to 'Editar', edit_admin_path(admin), :class=>"btn btn-default" %></td>
        <td><%= link_to 'Borrar', admin, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>
<br>


<div class="column">
<%= link_to 'Agregar Administrador', new_admin_path, :class=>"btn btn-default" %>
</div>